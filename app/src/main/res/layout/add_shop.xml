<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner_type"
        android:layout_width="fill_parent"
        app:ms_hint="@string/popup_add_shop_type"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/checkPos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pos_label" />

    <CheckBox
        android:id="@+id/checkTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tickets_label" />

    <CheckBox
        android:id="@+id/checkNonstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nonstop_label" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_shop_description"
        android:inputType="textMultiLine"
        android:maxLines="5" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_add_shop_button_add" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popup_add_shop_button_cancel" />
</LinearLayout>