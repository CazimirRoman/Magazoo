<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="text.regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text.medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.small.gray">
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="text.medium.gray">
        <item name="android:color">@android:color/darker_gray</item>
    </style>

    <style name="fontAwesome">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="fontAwesome.secondaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>

    </style>


    <style name="fontAwesome.iconSizeButtons">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="fontAwesome.iconSizeJoke">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@drawable/button_color</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
